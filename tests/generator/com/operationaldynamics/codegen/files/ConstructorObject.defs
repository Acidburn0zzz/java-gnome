(define-object Button
  (in-module "Gtk")
  (parent "GtkBin")
  (c-name "GtkButton")
  (gtype-id "GTK_TYPE_BUTTON")
)

(define-function gtk_button_new
  (is-constructor-of "GtkButton")
  (c-name "gtk_button_new")
  (caller-owns-return #t)
  (return-type "GtkBin*")
  (parameters
    '("GtkWidget*" "widget")
  )
)

(define-function gtk_button_new_nullable
  (is-constructor-of "GtkButton")
  (c-name "gtk_button_new_nullable")
  (caller-owns-return #t)
  (return-type "GtkBin*")
  (parameters
    '("GtkWidget*" "widget" (null-ok))
  )
)
